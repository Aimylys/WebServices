<definitions 
  name="ProductsService"
  targetNamespace="http://example.com/products"
  xmlns="http://schemas.xmlsoap.org/wsdl/"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="http://example.com/products">

  <!-- 1. Définition des messages -->
  <message name="CreateProductRequest">
    <part name="productName" type="xs:string"/>
    <part name="price" type="xs:float"/>
  </message>

  <message name="CreateProductResponse">
    <part name="result" type="xs:string"/>
  </message>

  <!-- 2. Définition des opérations -->
  <portType name="ProductsPortType">
    <operation name="CreateProduct">
      <input message="tns:CreateProductRequest"/>
      <output message="tns:CreateProductResponse"/>
    </operation>
  </portType>

  <!-- 3. Définition du binding -->
  <binding name="ProductsBinding" type="tns:ProductsPortType">
    <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="CreateProduct">
      <soap:operation soapAction="http://example.com/products/CreateProduct"/>
      <input>
        <soap:body use="encoded" namespace="http://example.com/products" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
      </input>
      <output>
        <soap:body use="encoded" namespace="http://example.com/products" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
      </output>
    </operation>
  </binding>

  <!-- 4. Définition du service -->
  <service name="ProductsService">
    <port name="ProductsPort" binding="tns:ProductsBinding">
      <soap:address location="http://localhost:8000/wsdl"/>
    </port>
  </service>

</definitions>
